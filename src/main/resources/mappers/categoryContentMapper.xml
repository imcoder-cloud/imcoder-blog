<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.imcoder.cloud.mapper.CategoryContentMapper">

    <insert id="insertBatch">
        insert into
        category_content(category_id,content_id)
        values
        <foreach collection="list" index="index" item="item" separator=",">
            (#{item.categoryId},#{item.contentId})
        </foreach>
    </insert>

    <select id="getByParentCategoryId" resultType="fun.imcoder.cloud.model.CategoryContent">
        select id id,
               category_id categoryId,
               content_id contentId
        from category_content a
        where a.category_id in (select b.id from category b where find_in_set(id,get_category_tree(#{categoryId})))
    </select>

</mapper>
